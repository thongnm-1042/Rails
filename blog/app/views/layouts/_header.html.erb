<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.application.title"), Settings.link.home , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), home_path %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <li><%= link_to t("static_pages.about.title"), about_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.application.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle",
              "data-toggle": "dropdown" do %>
              <%= t "layouts.application.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.application.profile"), current_user %></li>
              <li><%= link_to t("layouts.application.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.application.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.application.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
